# Mainnet Deployment Configuration
# Copy this file to .env.mainnet and fill in your values

# RPC endpoint
MAINNET_RPC=https://api.mainnet-beta.solana.com

# Program ID (will be set after deployment)
ZCOIN_PROGRAM=ZerEbRoPRoGrAm11111111111111111111111111111

# Keypairs (absolute paths to JSON arrays)
DEPLOYER_WALLET=/absolute/path/to/deployer.json
GOV_WALLET=/absolute/path/to/governance.json
UPGRADE_AUTHORITY=/absolute/path/to/upgrade-authority.json

# Old mint (pump.fun token) - MUST be existing mainnet token
OLD_MINT=EXISTING_PUMP_FUN_TOKEN_MAINNET_ADDRESS

# Owners for fixed allocations
TREASURY_OWNER=/absolute/path/to/treasury-owner.json
LIQUIDITY_OWNER=/absolute/path/to/liquidity-owner.json
CONTRIBUTORS_OWNER=/absolute/path/to/contributors-owner.json

# Deployment settings
TOTAL_CAP=100000000000000000
MIGRATION_CAP=60000000000000000
TREASURY_AMOUNT=20000000000000000
LIQUIDITY_AMOUNT=10000000000000000
CONTRIBUTORS_AMOUNT=10000000000000000

# Migration settings
RATIO_NUM=1
RATIO_DEN=10
OLD_DECIMALS=6
NEW_DECIMALS=9

# Window settings (will be set during deployment)
START_TS=1734567890
END_TS=1742147890

# Safety settings
MIN_DEPLOYER_BALANCE=5.0
REQUIRE_MULTISIG=true
